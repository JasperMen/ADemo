<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"></attr>
    </declare-styleable>
    <declare-styleable name="CustomTabBar">

        <attr name="barHeight" format="dimension"/>
        <attr name="barMiniHeight" format="dimension"/>
        <attr name="barWidthScale" format="float"/> //CustomTabBar 专用
        <attr name="leftMargin" format="dimension"/> //CustomScrollTabBar 专用
        <attr name="barColor" format="color"/>
        <attr name="curTabIndex" format="integer"/>

        <attr name="selectedTextSize" format="dimension"/>
        <attr name="normalTextSize" format="dimension"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="normalTextColor" format="color"/>

        <attr name="hasAnim" format="boolean"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animType" format="integer"/>

        <attr name="lineWidth" format="dimension"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="lineColor" format="color"/>
    </declare-styleable>

</resources>