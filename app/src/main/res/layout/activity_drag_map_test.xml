<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/drag_map_test_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!--<LinearLayout
            android:id="@+id/drag_map_test_drag_layout"
            android:layout_width="450dip"
            android:layout_height="match_parent"
            android:background="@mipmap/drag_photo_fail">

            <com.cedarwood.ademo.view.drag.DragView
                android:background="@mipmap/drag_photo_fail"
                android:id="@+id/drag_map_test_drag"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>-->

        <com.cedarwood.ademo.view.drag.DragContainer
            android:background="@color/co_global_bg"
            android:id="@+id/drag_map_test_drag_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        <GridView
            android:id="@+id/drag_map_test_grid"
            android:layout_marginRight="@dimen/dimen_global_margin"
            android:paddingTop="30dip"
            android:paddingBottom="30dip"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dip"
            android:horizontalSpacing="25dip"
            android:listSelector="@color/transparent"
            android:numColumns="2"
            android:scrollingCache="true"
            android:stretchMode="columnWidth"
            android:verticalSpacing="30dip" />
    </LinearLayout>





</LinearLayout>