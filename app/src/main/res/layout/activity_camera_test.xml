<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.cedarwood.ademo.view.camera.CameraContainer
        android:id="@+id/camera_test_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/camera_test_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/camera_test_preview"
        android:background="@android:color/black"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/camera_test_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45dp"
            android:padding="10dp"
            android:text="返回"
            android:textColor="@color/co_text_white"
            android:textSize="21sp" />

        <Button
            android:id="@+id/camera_test_take_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/camera_take_picture" />

        <TextView
            android:id="@+id/camera_test_picture_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="45dp"
            android:padding="10dp"
            android:text="完成"
            android:textColor="@color/co_text_white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/camera_test_picture_nums"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="center_vertical|right"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="90dp"
            android:background="@drawable/camera_pictures_num_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/co_text_red"
            android:textSize="@dimen/dimen_text_twelve" />
    </FrameLayout>

</RelativeLayout>