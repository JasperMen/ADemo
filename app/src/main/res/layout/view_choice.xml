<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout
        android:id="@+id/upgrade_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/co_global_white"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_global_line_h_half"
            android:background="@color/co_global_line" />

        <LinearLayout
            android:paddingTop="20dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:minHeight="70dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/choice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="提示"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/co_text_gray_deep"
                android:lineSpacingExtra="5dip"
                android:textSize="@dimen/dimen_text_sixteen"
                android:visibility="visible" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/choice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:lineSpacingExtra="3dip"
                android:text="你确定要退出吗?"
                android:textColor="@color/co_text_gray_deep"
                android:textSize="@dimen/dimen_text_fourteen"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dip"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@color/co_global_red"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/choice_cancel_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/co_text_white"
                android:textSize="@dimen/dimen_text_eighteen"
                android:visibility="gone" />

            <View
                android:id="@+id/choice_btn_line"
                android:layout_width="@dimen/dimen_global_line_h_half"
                android:layout_height="22dip"
                android:background="#ffaaad"
                android:visibility="gone" />

            <TextView
                android:visibility="gone"
                android:id="@+id/choice_sure_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="马上更新"
                android:textColor="@color/co_text_white"
                android:textSize="@dimen/dimen_text_eighteen" />
        </LinearLayout>
    </LinearLayout>
    
    
    

</LinearLayout>
