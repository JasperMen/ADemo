<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_global_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/co_global_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dip">

            <TextView
                android:id="@+id/picker_test_cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_global_margin"
                android:gravity="center_vertical"
                android:text="取消"
                android:textColor="@color/co_text_gray_deep"
                android:textSize="@dimen/dimen_text_fifteen" />

            <TextView
                android:id="@+id/picker_test_sure_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_global_margin"
                android:gravity="center_vertical"
                android:text="确定"
                android:textColor="@color/co_text_red"
                android:textSize="@dimen/dimen_text_fifteen" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_global_line_h_half"
                android:layout_alignParentBottom="true"
                android:background="@color/co_global_line" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/picker_test_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="@dimen/dimen_global_margin"
            android:layout_marginRight="@dimen/dimen_global_margin"
            android:layout_marginTop="30dip"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <com.cedarwood.ademo.view.picker.PickerView
                android:id="@+id/picker_test_type_one_picker"
                android:layout_width="0dp"
                android:layout_height="130dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1" />

            <com.cedarwood.ademo.view.picker.PickerView
                android:id="@+id/picker_test_type_two_picker"
                android:layout_width="0dp"
                android:layout_height="130dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1" />

            <com.cedarwood.ademo.view.picker.PickerView
                android:id="@+id/picker_test_type_three_picker"
                android:layout_width="0dp"
                android:layout_height="130dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>