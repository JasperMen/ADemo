<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:JazzyViewPager="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/view_global_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/jazzy_view_pager_spinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1">
        </Spinner>

        <Spinner
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/jazzy_view_pager_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1">
        </Spinner>
    </LinearLayout>

    <com.cedarwood.ademo.view.JazzyViewPager
        android:id="@+id/jazzy_view_pager_viewpager"
        android:layout_margin="10dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        JazzyViewPager:style="standard"
        JazzyViewPager:fadeEnabled="false"
        JazzyViewPager:outlineEnabled="true"
        JazzyViewPager:outlineColor="@color/co_global_blue"/>




</LinearLayout>